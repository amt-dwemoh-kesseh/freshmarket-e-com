generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Notification {
    id        String   @id @default(cuid())
    userId    String
    type      String
    title     String
    message   String
    orderId   String?
    isRead    Boolean  @default(false)
    createdAt DateTime @default(now())
}
